<h1 class="index-title">Bookes</h1>
  <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
    </tr>
 </thead>
  <tbody>
   <% @books.each do|book|%>
    <tr>
     <td><%=book.title %></td>
     <td><%=book.body %></td>
     <td><%=link_to "show", book_path(book.id) %></td>
     <td><%=link_to "edit", edit_book_path(book.id) %></td>
     <td><%=link_to "Destroy", book_path(book.id), method: :delete ,"data-confirm" => "Are you sure you want to delete itï¼Ÿ" %></td>
    </tr>
   <%end%>
  </tbody>
 </table>

<div class="Newbook">
 <h4>New book</h4>
  <%= form_with model:@book do |f| %>
   <div class="field">
    <label for="book_text">Title</label>
   </div>
  <%= f.text_field:title %>

  <div class="field">
   <label for="book_body">Body</label>
  </div>
   <%= f.text_area:body %>

 <div class=submit>
  <%= f.submit'Create Book' %>
 </div>

 <%end%>
</div>